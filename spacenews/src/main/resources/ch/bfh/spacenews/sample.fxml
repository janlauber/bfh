<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/15.0.1" fx:controller="ch.bfh.spacenews.Controller">

   <children>
      <Button text="Refresh" onAction="#refresh"/>
   </children>

   <children>
      <TableView fx:id="table" prefHeight="200.0" prefWidth="100.0" minHeight="300" >
         <columns>
            <TableColumn fx:id="title" prefWidth="75.0" text="Title" />
            <TableColumn fx:id="summary" prefWidth="75.0" text="Summary" />
            <TableColumn fx:id="date" prefWidth="75.0" text="Date" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
